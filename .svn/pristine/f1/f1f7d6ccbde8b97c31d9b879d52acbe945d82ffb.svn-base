@charset "UTF-8";

/* 크롬하츠 폰트 변경 */
@font-face {
	font-family: Cloister Black Light;
	src: local(Cloister Black Light);
	src: url(/js+style/fontAwesome/fonts/CloisterBlack.ttf);
}

/* 공용 css */
* {
	font-family: Cloister Black Light, sans-serif;
}

li, ul, ol {
	list-style: none;
}

a, a:hover {
	text-decoration: none;
}

* {
	font-size: 15px;
	color: #fff;
}

/* pc */
@media ( min-width :770px) {
	.menu {
		margin: 0;
		padding: 5px 0;
	}
	.menu ul.navbar-left li {
		padding: 0 15px;
	}
	.menu ul.navbar-left li a#inquiry-menu:hover {
		-webkit-transition: all 0.3s ease-in-out;
		-moz-transition: all 0.3s ease-in-out;
		-ms-transition: all 0.3s ease-in-out;
		-o-transition: all 0.3s ease-in-out;
		color: #ddd;
		padding: 15px 0;
	}
	.menu-title a.navbar-brand, .menu ul.navbar-left li a#inquiry-menu,
		.menu ul.navbar-left li>a {
		-webkit-transition: all 0.3s ease;
		-moz-transition: all 0.3s ease;
		-ms-transition: all 0.3s ease;
		-o-transition: all 0.3s ease;
		color: #fff;
		font-size: 17px;
	}
	.title-carousel-wrapper {
		min-height: 200px;
		background: #424040;
		position: relative;
	}
	a.left, a.right {
		height: 500px !important;
	}
	.main-carousel .item:first-child {
		background: url('/picture/testImg.jpg') no-repeat center !important;
		height: 500px;
	}
	.main-carousel .item {
		background: url('/picture/ring.jpg') no-repeat center;
		height: 500px;
	}
	.main-carousel .item:last-child {
		background: url('/picture/bracelet.jpg') no-repeat center !important;
		height: 500px;
	}
	.itemList, .inquiry-wrapper {
		background: #333333e6;
		padding: 0 0 25px;
	}
	.item-title-wrapper h3.item-title {
		position: relative;
		margin: 25px auto;
		text-align: center;
		font-size: 35px;
		border-bottom: 1px solid #ddd;
		padding: 15px 0;
		width: 50%;
	}
	.item-title-wrapper h3.item-title::after {
		content: "";
		padding: 1px 30px;
		background: #fff;
		position: absolute;
		left: 45%;
		top: 0;
	}
	.items ul.item-ul li {
		width: calc(100%/ 5);
		float: left;
		padding: 5px 10px;
		-webkit-transition: all 0.4s ease;
		-ms-transition: all 0.4s ease;
		-o-transition: all 0.4s ease;
		-moz-transition: all 0.4s ease;
	}
	.items ul.item-ul li:hover {
		-webkit-transition: all 0.4s ease-in-out;
		-ms-transition: all 0.4s ease-in-out;
		-o-transition: all 0.4s ease-in-out;
		-moz-transition: all 0.4s ease-in-out;
		-webkit-transform: scale(1.1);
		-o-transform: scale(1.1);
		-ms-transform: scale(1.1);
		-moz-transform: scale(1.1);
	}
	.items ul.item-ul li:hover ~ .item-ul {
		display: block;
	}
	.part-wrapper h3.item-part-h3 {
		text-align: center;
		margin: 15px 0;
		padding: 25px 0;
		font-size: 35px;
		letter-spacing: 3px;
	}
	.part-wrapper h3.item-part-h3::before {
		content: "-";
		padding: 0 5px;
	}
	.caption h4.caption-title {
		font-size: 27px;
		letter-spacing: 1px;
		word-spacing: 5px;
		border-radius: 20px;
		text-align: center;
		margin: 30px 0;
	}
	.caption {
		position: absolute;
		top: 80%;
		left: 20%;
	}
	.inquiry-wrapper .inquiry-tbl {
		margin: 15px auto;
		width: 70%;
	}
	.inquiry-wrapper .inquiry-tbl tbody tr th {
		color: #fff;
		text-align: center;
		vertical-align: middle;
		font-size: 20px;
		letter-spacing: 1px;
	}
	.inquiry-wrapper .inquiry-tbl tbody tr th::before {
		content: "*";
		color: #ec4b4b;
		padding: 0 5px;
	}
	button#inquiry-submit {
		color: #333;
		background: #fff;
		font-size: 18px;
		letter-spacing: 1px;
		-webkit-transition: all 0.3s ease;
		-moz-transition: all 0.3s ease;
		-o-transition: all 0.3s ease;
		-ms-transition: all 0.3s ease;
		letter-spacing: 1px;
	}
	button#inquiry-submit:hover {
		color: #fff;
		background: #333;
		-webkit-transition: all 0.3s ease-in-out;
		-moz-transition: all 0.3s ease-in-out;
		-ms-transition: all 0.3s ease-in-out;
		-o-transition: all 0.3s ease-in-out;
	}
	.category-main{
	    background: rgba(0, 0, 0, 0.65);
	}
	.category-wrapper .category-h3{
	   text-align: center; 
	   margin: 0;
	}
	.footer {
		background: #333 no-repeat center;
		height: 100px;
	}
	.footer-title-wrapper .footer-title {
		padding: 10px 0;
		border-bottom: 1px solid #fff;
		width: 45%;
		text-align: center;
	}
	.footer-content-wrapper .footer-dl {
		margin: 20px 0;
	}
	.footer-content-wrapper .footer-dt {
		font-size: 17px;
		padding: 0 0 5px;
	}
	.footer-content-wrapper .footer-dt::before {
		content: "\f003";
		font-family: "fontawesome";
		padding: 0 5px;
	}
	.footer-content-wrapper .footer-dd {
		letter-spacing: 2px;
		font-size: 13px;
	}
}

/* mobile */
@media ( max-width :769px) {
	* {
		display: none;
		visibility: hidden;
	}
}