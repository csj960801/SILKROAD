@charset "UTF-8";

li, ul, ol {
	list-style: none;
}

a, a:hover {
	text-decoration: none;
}

* {
	font-size: 15px;
}

/* pc */
@media ( min-width :770px) {
	.menu {
		margin: 0;
		padding: 5px 0;
	}
	.menu ul.navbar-left li {
		padding: 0 15px;
	}
	.title-carousel-wrapper {
		min-height: 200px;
		background: #424040;
	}
	a.left, a.right {
		height: 500px !important;
	}
	.main-carousel .item {
		background: url('/picture/testImg.jpg') no-repeat center;
		height: 500px;
	}
	.item-title-wrapper h3.item-title {
		position: relative;
		margin: 25px auto;
		text-align: center;
		font-size: 35px;
		border-bottom: 1px solid #ddd;
		padding: 15px 0;
		width: 50%;
	}
	.item-title-wrapper h3.item-title::after {
		content: "";
		padding: 1px 35px;
		background: #333;
		position: absolute;
		left: 45%;
		top: 0;
	}
	.items ul.item-ul li {
		width: calc(100%/ 5);
		float: left;
		padding: 5px 5px;
	}
	.footer {
		background: #ddd no-repeat center;
	}

	/* mobile */
	@media ( max-width :769px) {
		* {
			display: none;
		}
	}
}